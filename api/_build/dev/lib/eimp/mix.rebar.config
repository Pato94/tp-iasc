{provider_hooks,[{pre,[{compile,{pc,compile}},{clean,{pc,clean}}]}]}.
{plugins,[rebar3_hex,pc]}.
{deps,[{p1_utils,"1.0.13"}]}.
{port_env,[{"LDFLAGS","$LDFLAGS -lwebp -lpng -ljpeg -lgd  -lpthread"},
           {"CFLAGS",
            "$CFLAGS -g -O2 -Wall -DHAVE_WEBP -DHAVE_GD -DHAVE_JPEG -DHAVE_PNG"}]}.
{erl_opts,[debug_info,{src_dirs,["src"]},{d,'RAND_UNIFORM'}]}.
{port_specs,[{"priv/bin/eimp",["c_src/eimp.c"]}]}.
{clean_files,["c_src/eimp.gcda","c_src/eimp.gcno"]}.
{cover_enabled,true}.
{cover_export_enabled,true}.
{xref_checks,[undefined_function_calls,undefined_functions,
              deprecated_function_calls,deprecated_functions]}.
{profiles,[{test,[{erl_opts,[{src_dirs,["src","test"]}]}]}]}.
{overrides,[]}.
